<div class="card" style="width: 18rem;">
  <div>
    <img src="{{ product.image }}" class="card-img-top" alt="{{ product.productName }}">
  </div>
  <div>
    <h4 class="mb-1"><a href="/products/{{product.id}}/detail"> {{product.productName}} </a></h4>
    {{!-- <p class="card-text">{{ product.description }}</p> --}}
    {{!-- <p class="card-text">Price: ${{ product.productPrice }}</p> --}}
  </div>
  <container class="card-container">
  <div class="d-flex align-items-center" style="margin-left: 60px;">
    <p class="card-text"><i class="bi bi-bag"></i> {{ product.productPrice }} â‚¬</p>


    {{#isOwner currentUser=currentUser product=product}}
    <button class="edit-btn btn text-primary"><a href="/product/{{product.id}}/edit">
     <i class="bi bi-pencil-square"></i></a>
    </button>


    <form class="m-0" action="/products/{{product.id}}/delete" method="POST" id="delete-form">
      <button class="btn text-danger" type="submit" id="delete-btn">
        <i class="bi bi-trash3-fill"></i>
      </button>
    </form>

    {{/isOwner}}

    {{#if currentUser}}
    <button class="like-btn btn text-primary" type="button" value="{{product.id}}">
      <span>{{product.likes.length}}</span>
      {{#hasLike currentUser=currentUser product=product}}
      <i class="bi bi-heart-fill"></i>
      {{else}}
      <i class="bi bi-heart"></i>
      {{/hasLike}}
    </button>
    {{else}}
    <button class="like-btn btn text-primary" type="button">
      <span>{{product.likes.length}}</span><i class="bi bi-heart"></i></button>
    {{/if}}
  </div>

  <div class="d-flex align-items-center" style="margin-left: 60px;">
    {{#if currentUser}}
    <button class="save-btn btn text-primary" type="button" value="{{product.id}}">

      {{#hasSave currentUser=currentUser product=product}}
      <i class="bi bi-bookmark-fill"></i>
      {{else}}
      <i class="bi bi-bookmark"></i>
      {{/hasSave}}
    </button>
    {{else}}
    <i class="bi bi-bookmark"></i>
    {{/if}}
  </div>
  </container>

</div>