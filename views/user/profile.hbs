<div style="display: flex; margin: 20px; align-items: center">
  <i style="font-size: 32px; margin-right: 24;" class="bi bi-house"></i>
  <h3>Hola {{currentUser.firstName}}</h3>
</div>
<div class="d-flex ">
  {{> sidebar }}
  <section class="border border-bottom-0 border-top-0 w-100 p-4">

    <div>
      <h2 id="guardados">Guardados</h1>
    </div>

    <div class="container-profile">
      {{#each currentUser.saves as |productSaved|}}

      {{> card product=productSaved.product currentUser=../currentUser}}
      {{else}}
      <p>No hay proyectos que mostrar</p>
      {{/each}}

    </div>

    <div>
      <h2 id="venta">En venta</h1>
    </div>

    <div class="container-profile">

      {{#each currentUser.products as |product|}}

      {{> card product=product currentUser=../currentUser}}

      {{else}}
      <p>No hay proyectos que mostrar</p>
      {{/each}}

    </div>
    <div>
      <h2 style="margin-top: 32px; font-size: 1.5em" id="comprados">Comprados</h1>
    </div>

    <div class="container-profile">

      {{#each currentUser.purchases as |purchase|}}

      {{> card product=purchase.product currentUser=../currentUser}}

      {{else}}
      <p>No hay proyectos que mostrar</p>
      {{/each}}


  </section>
</div>