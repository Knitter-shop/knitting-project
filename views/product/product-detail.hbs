<div class="content-detail">
    <div class="description">
        <div>
        <h1 >{{product.productName}}</h1>
        <p style="margin-top: 40px; font-size: 24px">{{product.description}}</p>
        </div>
        {{#if product.productPrice}}
        <div style="display: flex; justify-content:space-between">
        <h3>Comprar {{product.productName}}</h3>
        <form method="POST" action="/products/{{product.id}}/purchase-confirmation">
            {{!-- <input type="hidden" name="price" value="{{product.productPrice}}" /> --}}
            <input type="hidden" name="typeBuy" value="product" />
            <button class="btn-purchase" type="submit"> {{product.productPrice}} € </button>
        </form>        
        </div>
        {{else}}
        <div style="display: flex; justify-content:space-between">
        <img src="/img/sad-wool.png" height="48"/>    
        <p>Lo sentimos, este artículo no está actualmente en venta.</p>
        </div>
        {{/if}}
        {{#if product.patternPrice}}
        <div style="display: flex; justify-content:space-between">
        <h3>Comprar el patrón</h3>
        <form method="POST" action="/products/{{product.id}}/purchase-confirmation">
            {{!-- <input type="hidden" name="price" value="{{product.patternPrice}}" /> --}}
            <input type="hidden" name="typeBuy" value="pattern" />
            <button class="btn-purchase" type="submit"> {{product.patternPrice}} € </button>
        </form> 
        </div>
        {{/if}}

        {{#if product.kitPrice}}
        <div style="display: flex; justify-content:space-between">
        <h3>¿Quieres el kit con el patrón + material para hacerlo? </h3>
        <form method="POST" action="/products/{{product.id}}/purchase-confirmation">
            {{!-- <input type="hidden" name="price" value="{{product.kitPrice}}" /> --}}
            <input type="hidden" name="typeBuy" value="kit" />
            <button class="btn-purchase" type="submit"> {{product.kitPrice}} € </button>
        </form>        
        </div>
        {{/if}}




    </div>
    <div class="description">
        <img src="{{product.image}}" alt="{{product.productName}}">
        <div>

            {{!-- <img src="{{currentUser.image}}" alt=""> --}}

            {{#if currentUser}}
            <button class="like-btn btn text-primary" type="button" value="{{product.id}}">
                <span>{{product.likes.length}}</span>
                {{#hasLike currentUser=currentUser product=product}}
                <i class="bi bi-heart-fill"></i>
                {{else}}
                <i class="bi bi-heart"></i>
                {{/hasLike}}
            </button>
            {{else}}
            <button class="like-btn btn text-primary" type="button">
                <span>{{product.likes.length}}</span><i class="bi bi-heart"></i></button>
            {{/if}}

            {{#if currentUser}}
            <button class="save-btn btn text-primary" type="button" value="{{product.id}}">

                {{#hasSave currentUser=currentUser product=product}}
                <i class="bi bi-bookmark-fill"></i>
                {{else}}
                <i class="bi bi-bookmark"></i>
                {{/hasSave}}
            </button>
            {{else}}
            <button class="save-btn btn text-primary" type="button">
                <i class="bi bi-bookmark"></i></button>
            {{/if}}
        </div>
    </div>
</div>